<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/order_info_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:id="@+id/imageView"
            android:layout_gravity="right|center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/order_message" />

        <TextView
            android:id="@+id/order_info_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/weChat_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/we_chat"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_weight="1"
            android:textSize="19sp"
            android:text="微信支付"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/weChat_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/zhifubao_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/zhifubao"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_weight="1"
            android:textSize="19sp"
            android:text="支付宝支付"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/zhifubao_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:id="@+id/bank_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bank"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_weight="1"
            android:textSize="19sp"
            android:text="银行卡支付"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/bank_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>


    <Button
        android:id="@+id/pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="80dp"
        android:background="@drawable/send_confirm_btn_bg"
        android:text="@string/pay"
        android:textColor="@color/white" />

</LinearLayout>