<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/package_btn"
        android:background="@drawable/pacakge_logo"
        android:layout_width="71dp"
        android:layout_height="64dp" />

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/shuttle" />

    <ImageView
        android:id="@+id/bottom_iamge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left|top"
        android:src="@drawable/send" />

    <master.flame.danmaku.ui.widget.DanmakuView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/danmaku_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="TextView" />

    <RelativeLayout
        android:id="@+id/guide"
        android:visibility="gone"
        android:background="@color/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="滑动到右下方可以抢别人的订单哦~"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="滑动到左上方可以发送订单哦~"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_above="@+id/imageView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="70dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="106dp"
            android:layout_height="99dp"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/left_up" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="106dp"
            android:layout_height="99dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView4"
            android:layout_marginEnd="98dp"
            android:layout_marginTop="66dp"
            android:src="@drawable/right_bottom" />
    </RelativeLayout>
</FrameLayout>