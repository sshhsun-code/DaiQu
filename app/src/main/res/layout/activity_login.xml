<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.daiqu.cm.daiqu.MainActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/login_logo"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:textSize="18dp"
                android:text="账号："/>
            <EditText
                android:id="@+id/login_name"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textColorHint="#dbdbdb"
                android:textSize="18dp"
                android:hint="@string/login_name_hint"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#dbdbdb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:textSize="18dp"
                android:text="密码："/>
            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textColorHint="#dbdbdb"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:background="#dbdbdb"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:text="记住我"
                android:textColor="#2c2c2c"
                android:layout_width="wrap_content"
                android:padding="0dp"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2c2c2c"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:text="忘记密码？"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_height="35dp">
        <Button
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_normal"
            android:text="@string/sign_in" />
        <Button
            android:id="@+id/sign_up"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:background="@drawable/btn_bg_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:layout_height="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#515151"
            android:textSize="20dp"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:text="第三方账号登录"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/qq"
                    android:layout_width="40dp"
                    android:src="@drawable/qq1"
                    android:padding="2dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_below="@id/qq"
                    android:gravity="center_horizontal"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:textColor="#515151"
                    android:text="QQ"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/wechat"
                    android:layout_width="40dp"
                    android:src="@drawable/wechat1"
                    android:layout_marginBottom="5dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_below="@id/wechat"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#515151"
                    android:text="微信"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/weibo"
                    android:layout_width="40dp"
                    android:src="@drawable/weibo1"
                    android:layout_marginBottom="5dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_below="@id/weibo"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="#515151"
                    android:textSize="14dp"
                    android:text="微博"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
